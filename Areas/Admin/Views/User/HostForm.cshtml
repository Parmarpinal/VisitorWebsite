@model VisitorWebsite.Areas.Admin.Models.UserModel

<div class="container">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">

                <div class="card" style="border:1px solid #2b3643;">
                    <form method="post" asp-controller="User" asp-action="Save" enctype="multipart/form-data">
                        <div class="card-header">
                            <div class="card-title">Host Form</div>
                        </div>
                        <div class="card-body p-3">
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                            }

                            <input type="hidden" value="@Model.UserID" asp-for="UserID" />
                            <input type="hidden" value=1 asp-for="UserTypeID" />
                            <input type="hidden" asp-for="ImagePath" value="@Model.ImagePath" />
                            <div class="row">
                                @if(Model.UserID == 0){
                                    <div class="col">
                                        <div class="form-group">
                                            <label asp-for="ImageFile">User Image</label>
                                            <input type="file" asp-for="ImageFile"
                                                   class="form-control" />
                                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                                        </div>
                                    </div>
                                    
                                }
                                
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="UserName">User Name</label>
                                        <input asp-for="UserName"
                                               type="text"
                                               class="form-control" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="Age">Age</label>
                                        <input type="number"
                                               class="form-control" asp-for="Age" />
                                        <span asp-validation-for="Age" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>

                            <div class="row">

                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="Email">Email</label>
                                        <input type="email"
                                               class="form-control" asp-for="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="Password">Password</label>
                                        <input type="password" value="@Model.Password"
                                               class="form-control" asp-for="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="Gender">Gender</label>
                                        <div class="row ms-2">
                                            <div class="form-check col-4">
                                                <input class="form-check-input" asp-for="Gender" type="radio" value="Male" id="GenderMale" />
                                                <label class="form-check-label" for="GenderMale">Male</label>
                                            </div>
                                            <div class="form-check col-4">
                                                <input class="form-check-input" asp-for="Gender" type="radio" value="Female" id="GenderFemale" />
                                                <label class="form-check-label" for="GenderFemale">Female</label>
                                            </div>
                                            <div class="form-check col-4">
                                                <input class="form-check-input" asp-for="Gender" type="radio" value="Other" id="GenderOther" />
                                                <label class="form-check-label" for="GenderOther">Other</label>
                                            </div>
                                        </div>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="MobileNo">Mobile number</label>
                                        <input asp-for="MobileNo"
                                               type="text"
                                               class="form-control" />
                                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="City">City Name</label>
                                        <input type="text"
                                               class="form-control" asp-for="City" />
                                        <span asp-validation-for="City" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>

                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label asp-for="OrganizationID">Organization Name</label>
                                        <select class="form-select" id="OrganizationID" asp-for="OrganizationID" required>
                                                <option value="">Select organization</option>
                                                @foreach (var v in ViewBag.OrganizationList)
                                                {
                                                    <option value="@v.OrganizationID">@v.OrganizationName</option>
                                                }
                                            </select>
                                            <span asp-validation-for="OrganizationID" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <label asp-for="DepartmentID">Department Name</label>
                                        <select class="form-select" id="DepartmentID" asp-for="DepartmentID" required>
                                            <option value="">Select Department</option>
                                            @* @if (ViewBag.DepartmentList != null){

                                                 @foreach (var v in ViewBag.DepartmentList) 
                                                 {
                                                     <option value="@v.DepartmentID">@v.DepartmentName</option>
                                                }
                                            } *@
                                            </select>
                                            <span asp-validation-for="DepartmentID" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            
                        </div>
                        <div class="card-action">
                            <input class="btn btn-success" type="submit" value="Submit" />
                            <a class="btn btn-danger" asp-controller="User" asp-action="GetHosts">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

