@model VisitorWebsite.Areas.Admin.Models.DashBoardModel

<div class="page-inner">
    <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
        <div>
            <h3 class="fw-bold mb-3">Dashboard</h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a class="card card-stats card-round" asp-controller="Organization" asp-action="GetOrganization">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-icon">
                            <div class="icon-big text-center icon-primary bubble-shadow-small">
                                <i class="fas fa-building"></i>
                            </div>
                        </div>
                        <div class="col col-stats ms-3 ms-sm-0">
                            <div class="numbers">
                                <p class="card-category">@Model.Counts[0].Metric</p>
                                <h4 class="card-title">@Model.Counts[0].Value</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a class="card card-stats card-round" asp-controller="Department" asp-action="GetDepartment">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-icon">
                            <div class="icon-big text-center icon-success bubble-shadow-small">
                                <i class="fas fa-sitemap"></i>
                            </div>
                        </div>
                        <div class="col col-stats ms-3 ms-sm-0">
                            <div class="numbers">
                                <p class="card-category">@Model.Counts[1].Metric</p>
                                <h4 class="card-title">@Model.Counts[1].Value</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a class="card card-stats card-round" asp-controller="User" asp-action="GetHosts">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-icon">
                            <div class="icon-big text-center icon-warning bubble-shadow-small">
                                <i class="fas fa-user-tie"></i>
                            </div>
                        </div>
                        <div class="col col-stats ms-3 ms-sm-0">
                            <div class="numbers">
                                <p class="card-category">@Model.Counts[2].Metric</p>
                                <h4 class="card-title">@Model.Counts[2].Value</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a class="card card-stats card-round" asp-controller="User" asp-action="GetReceptionists">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-icon">
                            <div class="icon-big text-center icon-info bubble-shadow-small">
                                <i class="fas fa-concierge-bell"></i>
                            </div>
                        </div>
                        <div class="col col-stats ms-3 ms-sm-0">
                            <div class="numbers">
                                <p class="card-category">@Model.Counts[3].Metric</p>
                                <h4 class="card-title">@Model.Counts[3].Value</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a class="card card-stats card-round" asp-controller="Visitor" asp-action="GetVisitor">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-icon">
                            <div class="icon-big text-center icon-secondary bubble-shadow-small">
                                <i class="fas fa-user-check"></i>
                            </div>
                        </div>
                        <div class="col col-stats ms-3 ms-sm-0">
                            <div class="numbers">
                                <p class="card-category">@Model.Counts[4].Metric</p>
                                <h4 class="card-title">@Model.Counts[4].Value</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="card card-round">
                <div class="card-header">
                    <div class="card-head-row card-tools-still-right">
                        <div class="card-title">Organizations Details</div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <!-- Projects table -->
                        <table class="table align-items-center mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col" class="text-end">Organization name</th>
                                    <th scope="col" class="text-end">Department count</th>
                                    <th scope="col" class="text-end">Receptionist count</th>
                                    <th scope="col" class="text-end">Head</th>
                                    <th scope="col" class="text-end">City</th>
                                    <th scope="col" class="text-end">Established date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var v in Model.RecentOrganizations){
                                    <tr>
                                        <td class="text-end">@v.OrganizationName</td>
                                        <td class="text-end">@v.DepartmentCount</td>
                                        <td class="text-end">@v.ReceptionistCount</td>
                                        <td class="text-end">@v.Head</td>
                                        <td class="text-end">@v.City</td>
                                        <td class="text-end">@v.EstablishedDate.ToString("dd/MM/yyyy \n hh:mm tt")</td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-round">
                <div class="card-header">
                    <div class="card-head-row card-tools-still-right">
                        <div class="card-title">Departments Details</div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <!-- Projects table -->
                        <table class="table align-items-center mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col" class="text-end">Department name</th>
                                    <th scope="col" class="text-end">Organization name</th>
                                    <th scope="col" class="text-end">Host count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var v in Model.RecentDepartments)
                                {
                                    <tr>
                                        <td class="text-end">@v.DepartmentName</td>
                                        <td class="text-end">@v.OrganizationName</td>
                                        <td class="text-end">@v.HostCount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <div class="card card-round">
                <div class="card-header">
                    <div class="card-head-row card-tools-still-right">
                        <div class="card-title">Receptionist Details</div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <!-- Projects table -->
                        <table class="table align-items-center mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col" class="text-end">Receptionist name</th>
                                    <th scope="col" class="text-end">Organization name</th>
                                    <th scope="col" class="text-end">Joining date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var v in Model.TopReceptionists)
                                {
                                    <tr>
                                        <td class="text-end">@v.ReceptionistName</td>
                                        <td class="text-end">@v.OrganizationName</td>
                                        <td class="text-end">@v.JoiningDate.ToString("dd/MM/yyyy \n hh:mm tt")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-7">
            <div class="card card-round">
                <div class="card-header">
                    <div class="card-head-row card-tools-still-right">
                        <div class="card-title">Host Details</div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <!-- Projects table -->
                        <table class="table align-items-center mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Host name</th>
                                    <th scope="col" class="text-end">Organization name</th>
                                    <th scope="col" class="text-end">Department name</th>
                                    <th scope="col" class="text-end">Visitor count</th>
                                    <th scope="col" class="text-end">Joining date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var v in Model.TopHosts)
                                {
                                    <tr>
                                        <td class="text-end">@v.HostName</td>
                                        <td class="text-end">@v.OrganizationName</td>
                                        <td class="text-end">@v.DepartmentName</td>
                                        <td class="text-end">@v.VisitorCount</td>
                                        <td class="text-end">@v.JoiningDate.ToString("dd/MM/yyyy \n hh:mm tt")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            <div class="card card-round">
                <div class="card-header">
                    <div class="card-head-row card-tools-still-right">
                        <div class="card-title">Visitors Details</div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <!-- Projects table -->
                        <table class="table align-items-center mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Visitor name</th>
                                    <th scope="col" class="text-end">Organization name</th>
                                    <th scope="col" class="text-end">Department name</th>
                                    <th scope="col" class="text-end">Purpose</th>
                                    <th scope="col" class="text-end">Host name</th>
                                    <th scope="col" class="text-end">Visit date</th>
                                    <th scope="col" class="text-end">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var v in Model.TopVisitors)
                                {
                                    <tr>
                                        <th scope="row">
                                            @v.UserName
                                        </th>

                                        <td class="text-end">@v.OrganizationName</td>
                                        <td class="text-end">@v.DepartmentName</td>
                                        <td class="text-end">@v.Purpose</td>
                                        <td class="text-end">@v.HostName</td>
                                        <td class="text-end">@v.VisitDate.ToString("dd/MM/yyyy \n hh:mm tt")</td>
                                        <td>
                                            @{
                                                if (v.CheckIn != null && v.CheckOut == null)
                                                {
                                                    <span class="badge badge-danger">CheckedIn</span>
                                                }
                                                else if (v.CheckIn != null && v.CheckOut != null)
                                                {
                                                    <span class="badge badge-success">CheckedOut</span>
                                                }
                                                else if (v.CheckIn == null && v.CheckOut == null)
                                                {
                                                    <span class="badge badge-warning">Not defined</span>
                                                }
                                            }
                                        </td>

                                        @* <td class="text-end"><span class="badge badge-success">@v.CheckIn</span></td>
                                        <td class="text-end">@v.CheckOut</td> *@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
